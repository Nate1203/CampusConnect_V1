<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:boxStrokeColor="@color/text_input"
            app:hintTextColor="@color/text_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/text_input"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Surname"
            app:boxStrokeColor="@color/text_input"
            app:hintTextColor="@color/text_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminSurnameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/text_input"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:boxStrokeColor="@color/text_input"
            app:hintTextColor="@color/text_hint"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="@color/text_input"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:boxStrokeColor="@color/text_input"
            app:hintTextColor="@color/text_hint"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/text_input"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            app:boxStrokeColor="@color/text_input"
            app:hintTextColor="@color/text_hint"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adminConfirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/text_input"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Replace the existing checkbox section with this -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Areas of Expertise:"
            android:textColor="@color/text_input"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/campusQueryCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CampusQuery"
            android:textColor="@color/text_input"/>

        <CheckBox
            android:id="@+id/studentHubQueryCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StudentHubQuery"
            android:textColor="@color/text_input"/>

        <CheckBox
            android:id="@+id/alumniQueryCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlumniQuery"
            android:textColor="@color/text_input"/>

        <Button
            android:id="@+id/adminSignupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up as Admin"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/button_purple"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>