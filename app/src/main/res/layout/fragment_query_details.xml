<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/queryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/queryType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/queryCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/dateSubmitted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Query Description"
                        android:textSize="18sp"
                        android:textColor="@color/electric_blue"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/queryDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/startProcessingButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Processing Query"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/electric_blue"
                android:padding="16dp"/>


            <Button
                android:id="@+id/solveQueryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solve Query"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/electric_blue"
                android:padding="16dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>